mixin sProduct(data)
	// start sProduct
	+b.sProduct.section#sProduct&attributes(attributes)
		.container
			+b.section-title.text-center.d-lg-none
				.h2 Шпунт Ларсена&nbsp;Л4
			.row
				.col-lg-6
					+e.slider--js.swiper
						.swiper-wrapper
							-for(let i = 1; i < 5; i++)
								+e.slide.swiper-slide
									+e.img-wrap(data-fancybox='sProduct' data-src=`img/sProduct-${i}.jpg`)
										+img(`img/sProduct-${i}.jpg`, 'bg')
							-for(let i = 1; i < 5; i++)
								+e.slide.swiper-slide
									+e.img-wrap(data-fancybox='sProduct' data-src=`img/sProduct-${i}.jpg`)
										+img(`img/sProduct-${i}.jpg`, 'bg')
						+arrow
					+e.slider-thumbs--js.swiper
						.swiper-wrapper
							-for(let i = 1; i < 5; i++)
								+e.slide.swiper-slide
									+e.img-wrap
										+img(`img/sProduct-${i}.jpg`, 'bg')
							-for(let i = 1; i < 5; i++)
								+e.slide.swiper-slide
									+e.img-wrap
										+img(`img/sProduct-${i}.jpg`, 'bg')
				+e.col.col-lg-6
					+e.row.row
						.col-12.d-none.d-lg-block
							+b.section-title
								.h2 Шпунт Ларсена&nbsp;Л4
						.col-12
							.row
								.col-12.col-sm-6.col-lg-6.col-xl-6
									+e.type
										span Тип шпунта
										+in-c('radio', 'Новый', 'type-1')(checked)
										+in-c('radio', 'Б/У', 'type-1')
								.col-12.col-sm-6.col-lg-6.col-xl-6
									+e.type
										span Тип заявки
										+in-c('radio', 'Купить', 'type-2')(checked)
										+in-c('radio', 'Арендовать', 'type-2')
						.col-12.order-md-last
							.row
								.col
									+e.price
										span Цена за тонну
										strong от 14 000 ₽
								.col-md-6.col-lg-auto.col-xl-6
									+btn('Узнать точную цену', 'submit').btn.btn-primary
									//- +e.btn.btn.btn-primary(href="#") Узнать точную цену
						.col-12
							table
								mixin tr(...cells)
									tr
										each cell in cells
											td!= cell
								+tr(`Ширина профиля`,`400&nbsp;мм`)
								+tr(`Высота профиля`,`14,8&nbsp;мм`)
								+tr(`Ширина стенки`,`359&nbsp;мм`)
								+tr(`Вес 1&nbsp;м.п. шпунта`,`0,074&nbsp;тн`)
								+tr(`Вес 1&nbsp;м&sup2; шпунта`,`0,185&nbsp;тн`)
								+tr(`Упр. момент сопр.`,`2200 см&sup3/м`)
								+tr(`Момент инерции`,`39600 cм&sup3/м`)
								+tr(`ТУ`,`У&nbsp;27.1-26524137-1375`)
	// end sProduct