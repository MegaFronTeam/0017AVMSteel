mixin sForm(h, t)
	// start sForm
	+b.sForm.section#sForm&attributes(attributes)
		+e.container.container
			+form-wrap
				.h2!= h
				p!= t
				+e.row.row
					.col-md
						+input('Ваш телефон', 'tel')
					.col-md
						if h == 'test'
							+e.BUTTON.btn.btn.btn-primary(type='submit' disabled) Запросить КП
						else
							+e.BUTTON.btn.btn.btn-primary(type='submit') Запросить КП
				+policy
				+img('img/sForm-img-1.png').img
	// end sForm
