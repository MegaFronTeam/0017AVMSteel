mixin cert-slide(t, p, i)
	+e.slide.swiper-slide
		+e.A.img-wrap(data-fancybox='sCertificates' data-src=`img/sCertificates-lg-${i}.jpg`)
			+e.btn-zoom
				+icon('zoom')
			.img-wrap-center
				+img(`img/sCertificates-${i}.jpg`, 'bg')

mixin sCertificates(def=true)
	// start sCertificates
	+b.SECTION.sCertificates.section#sCertificates&attributes(attributes)
		.container
			+b.section-title.text-center
				if def
					h2 Необходимые 
						span сертификаты <br> и&nbsp;допуски
				else
					h2 Сертификаты 
						span и ТУ
			+e.slider-wrap
				+e.slider--js.swiper
					.swiper-wrapper
						+cert-slide(`Васильев Константин`, `Генеральный директор`, 1)
						+cert-slide(`Иванов Василий`, `Генеральный директор`, 2)
						+cert-slide(`Максимова Анастасия`, `Руководитель отдела продаж`, 1)
						+cert-slide(`Иван Петров`, `Директор по маркетингу`, 2)
				+arrow-rounded()

	// end sCertificates