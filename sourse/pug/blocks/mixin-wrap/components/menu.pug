
mixin mnu()
	nav
		ul.menu(itemscope itemtype="http://schema.org/SiteNavigationElement")
			each link in nav
				if link.active && link.name
					li.menu-item.current-menu-item(itemprop="item" ): a(href= link.url itemprop="url")= link.name
				else 
					if link.name
						li.menu-item(itemprop="item" ): a(href= link.url itemprop="url")= link.name
				if link.subnav
					li.menu-item.menu-item-has-children
						span= link.subname
						ul.sub-menu
							each sublink in link.subnav
								li.menu-item(itemprop="item" )
									a(href= sublink.url itemprop="url")= sublink.name
									if sublink.lastsubnav
										ul.sub-menu
											each lastsublink in sublink.lastsubnav
												li.menu-item(itemprop="item" ): a(href= lastsublink.url itemprop="url")= lastsublink.name

//- menu