mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")



mixin search()
	+b.search-block
		form
			input(type="text" placeholder="Поиск по номеру или названию запчасти")
			button 
				+icon("search")


mixin page-head(i, t,...items)
	+b.page-head.bg-wrap
		if i
			+img(`img/page-head-bg-${i}.jpg`, `bg`)
		- let l = items.length
		+breadcrumb('Главная',...items)
		+e.content
			.container
				h1!= t
				block

mixin dowload-link(t)
	+b.A.dowload-link(href='#' download='')
		+icon('download')
		span= t
		+icon('PDF')

mixin needHelp()
	+b.need-help
		+img('img/svg/question.svg')
		h4 Нужна помощь?
		p Не&nbsp;можете найти необходимую информацию?
		p Вы&nbsp;всегда можете обратиться к&nbsp;нам по&nbsp;контактам указанным ниже. Мы&nbsp;будем рады помочь!
		+e.tel(href="tel:84958856053") 8 (495) 885-60-53
		+e.tel(href="tel:84958855011") 8 (495) 885-50-11
		+e.mail(href="mailto:info@avmsteel.ru") info@avmsteel.ru
		+soc()

mixin sStages-item(i, t)
	+e.col.col-md-6.col-lg-4.col-xxl
		+e.item
			+e.icon-wrap
				+e.counter
				+icon(`sStages-${i}`)
			p!= t
			+icon('sStages-arrow')
			block

mixin cookies()
	+b.cookies 
		p На нашем сайте используются Cookie.
		+e.btn

mixin portfolio-item(l, t, s, img)
	+b.ARTICLE.portfolio-item
		.container
			.row
				.col-lg-6
					+e.slider--js.swiper
						+e.location
							+icon('location')
							span!= l
						.swiper-wrapper
							- for (let i = 0; i < 5; i++) 
								+e.slide.swiper-slide
									+e.img-wrap
										.img-wrap-center
											+img(`img/sPortfolio-${img}.jpg`, 'bg')
						.swiper-pagination
						+arrow()
					+e.caption
						.icon-wrap
							+icon('calendar')
						span Сроки выполнения работ с учетом поставки шпунта составили 30&nbsp;календарных дней
				+e.col.col-lg-6
					h3!= t
					h5!= s
					block

	// /.portfolio-item


mixin portfolio-list(t, ...items)
	h6!= t
	ul
		each item in items
			li!= item
		

	// /.portfolio-list